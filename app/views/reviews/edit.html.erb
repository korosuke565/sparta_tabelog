<div class="row">
  <div class="col-lg-12">
    <%= form_for([@restaurant, @review], :url => {:action => 'update'}) do |f| %>
      <div class="form-group">
        <%= f.label :score, '星(5段階評価)' %><br>
        <%= f.number_field :score, class:"form-control" %>
        <%= f.label :body, 'レビュー' %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>
