<%= form_for @restaurant do |f| %>
  <% if @restaurant.errors.any? %>

  <div class="alert alert-danger">
    <p><b><%= @restaurant.errors.count %>件のエラーがあります</b></p>

    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :store_name, "店名" %>
    <%= f.text_field :store_name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :image_url, "画像" %>
    <%= f.text_field :image_url, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :tel, "電話番号"%>
    <%= f.text_field :tel, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所"%>
    <%= f.text_field :address, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :website, "ホームページ"%>
    <%= f.text_field :website, class: "form-control"%>
  </div>
  <%= f.submit %>
<% end %>
